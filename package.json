{
  "name": "ai-study-tracker",
  "private": true,
  "version": "1.0.0",
  "description": "AI-Powered Study Tracker with on-device computer vision",
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "npm run dev -w apps/web",
    "dev:api": "npm run dev -w apps/api",
    "build": "npm run build:web && npm run build:api",
    "build:web": "npm run build -w apps/web",
    "build:api": "npm run build -w apps/api",
    "start:api": "npm run start -w apps/api",
    "test": "npm run test:web && npm run test:api",
    "test:web": "npm run test -w apps/web",
    "test:api": "npm run test -w apps/api",
    "test:e2e": "npm run test:e2e -w apps/web",
    "lint": "npm run lint -w apps/web && npm run lint -w apps/api",
    "format": "prettier --write \"apps/**/*.{js,ts,tsx,json,md}\"",
    "prepare": "husky install"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "keywords": ["study-tracker", "ai", "computer-vision", "react", "express"],
  "author": "AI Study Tracker Team",
  "license": "MIT"
}